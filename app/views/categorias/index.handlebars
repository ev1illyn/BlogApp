{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}
<h2>Lista de Categorias</h2>

{{#each categorias}}
    <div class="card mt-2">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <h5>{{slug}}</h5><br>
            <small>{{date}}</small><br>
            <a href="/categorias/{{slug}}">
                <button class="btn btn-primary">
                    Leia mais
                </button>
            </a>
        </div>
    </div>
    <hr>
{{else}}
{{/each}}