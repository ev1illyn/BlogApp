{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}
<h2>Postagens por categoria</h2>
<hr>

{{#each postagens}}

    <div class="card text-center">
        <div class="card-header">
            {{titulo}}
        </div>
        <div class="card-body">
            <p>{{slug}}</p>
            <p>{{descricao}}</p>
            <p>{{conteudo}}</p>
        </div>
        <div class="card-footer text-muted">
            <p>{{categoria.nome}} - {{date}}</p>
        </div>
    </div>
    <hr>
{{else}}
    <h5>nenhuma postagem nessa categoria!</h5>
{{/each}}