{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}
<div class="card">
    <h1>Nova Postagem</h1>
    <div class="card-body">
        <form action="/admin/postagens/nova" method="post">
            
            <label for="titulo">titulo:</label>
            <input type="text" name="titulo" placeholder="digite o titulo da postagem" class="form-control">
            
            <label for="slug">Slug:</label>
            <input type="text" name="slug" placeholder="digite o slug da postagem" class="form-control">
            
            <label for="descricao">Descrição:</label>
            <input type="text" name="descricao" placeholder="digite a descricao da postagem" class="form-control">
            
            <label for="conteudo">Conteúdo:</label>
            <textarea type="text" name="conteudo" placeholder="digite o conteudo da postagem" class="form-control"></textarea>
            
            <label for="categoria">Categoria:</label>
            <select class="form-control" name="categoria">
                {{#each categorias}}
                    <option value="{{_id}}"> {{nome}} </option>
                {{else}}
                    <option value="0"> Nenhuma categoria encontrada!</option>
                {{/each}}
            </select>
            <!--<input type="text" name="categoria" id="digite a categoria da postagem" class="form-control">
            --><hr>
            
            <button class="btn btn-success">Criar Postagem</button>
        </form>
    </div>
</div>