{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}
<div class="card">
    <h1>Nova Categoria</h1>
    <div class="card-body">
        <form action="/admin/categorias/nova" method="post">
            <label for="nome">Nome:</label>
            <input type="text" name="nome" placeholder="digite o nome da categoria" class="form-control">
            <label for="slug">Slug:</label>
            <input type="text" name="slug" placeholder="digite o slug da categoria" class="form-control">
            <hr>
            <button class="btn btn-success">Criar categoria</button>
        </form>
    </div>
</div>