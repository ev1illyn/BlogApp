{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}
<h2>Lista de Categorias</h2>
<hr>

<div class="row">
<a href="/admin/categorias/add" class="mr-5">
    <button class="btn btn-success">Nova categoria</button>
</a>

    <form class="form-inline" action="/admin/categorias/buscar" method="POST">
      <input class="form-control" type="search" name="nome" placeholder="Pesquise uma categoria" aria-label="Search">
      <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Pesquisar</button>
    </form>
    <hr>

</div>

<div class="row">
{{#each categorias}}
  <div class="col-sm-4 mt-4">
    <div class="card mt-2">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <p>{{slug}}</p>
            <small>>{{date}}</small><br><hr>
            
        <div class="btn-group" role="group" aria-label="Basic example"> 
            <a href="/admin/categorias/edit/{{id}}">
                <button class="btn btn-success">
                    Editar
                </button>
            </a>
            <form action="/admin/categorias/delete" method="post">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger">Deletar</form>
            </form>
            </div>
        </div>
    </div>
    </div>
  {{else}}
        <div class="alert alert-danger">
        NÃ£o existe nenhuma categoria!
        </div>
  {{/each}}
</div>