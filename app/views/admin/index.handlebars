{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}
<div class="jumbotron">
  <h1 class="display-4">Hello, world!</h1>
  <p class="lead">Bem-vindo ao blog com NodeJS</p>
  <hr class="my-4"><a class="btn btn-primary btn-lg" href="/usuarios/login" role="button">Entre na sua conta</a> ou 
  <a class="btn btn-outline-primary btn-lg" href="/usuarios/registro" role="button">Crie uma conta</a>
</div>

<hr>

<h2>Postagens Recentes</h2><hr>

{{#each postagens}}

    <div class="card">
        <div class="card-header">
            <h2 class="text-center">{{titulo}}</h2>
        </div>
        <div class="card-body">
            <h5>Descrição: {{descricao}}</h5>
            <h5><i>Conteúdo: {{conteudo}}</i></h5>
        </div>
        <div class="card-footer text-muted">
            
            <p>{{categoria.nome}} - {{date}}</p>
        <a href="postagem/{{slug}}">
                <button class="btn btn-primary">
                    Leia mais
                </button>
        </a>
        </div>
    </div>
    <hr>
{{else}}
    <h5>nenhuma postagem!</h5>
{{/each}}